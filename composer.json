{
  "name": "meezaan/microservice-template",
  "type": "template",
  "description": "A PHP microserice template",
  "authors": [
    {
      "name": "Meezaan-ud-Din Abdu Dhil-Jalali Wal-Ikram",
      "email": "website@meezaan.net"
    }
  ],
  "require": {
    "php": ">=7.2",
    "monolog/monolog": "~1.17",
    "guzzlehttp/guzzle": "^6.1",
    "slim/slim": "^3.9",
    "symfony/yaml": "^3.3",
    "tuupola/slim-jwt-auth": "^2.2",
    "tuupola/slim-basic-auth": "^2.2",
    "slim/http-cache": "0.4.0",
    "meezaan/microservice-helper":"dev-master",
    "davidepastore/slim-validation": "^0.5.0",
    "slim/twig-view": "^2.4",
    "slim/php-view": "^2.2",
    "tightenco/collect": "^5.6"
  },
  "autoload": {
    "psr-0": {
      "": "src/"
    },
    "psr-4": {
      "Middleware\\": "src/middleware/",
      "Config\\": "config/",
      "Model\\": "src/models/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "roave/security-advisories":   "dev-master",
    "phpunit/phpunit":             "^6.2",
    "squizlabs/php_codesniffer":   "^3.0",
    "phpmd/phpmd" :                "@stable",
    "behat/behat":                 "^3.4",
    "behat/mink-extension":        "^2.3",
    "behat/mink-goutte-driver":    "^1.2",
    "behat/mink-selenium2-driver": "^1.3",
    "mockery/mockery":             "^1.0",
    "phploc/phploc":               "^4.0",
    "sebastian/phpcpd":            "^3.0",
    "theseer/phpdox":              "^0.11.0"
  }
}
